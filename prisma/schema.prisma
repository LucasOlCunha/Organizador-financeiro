generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  password      String
  data_criacao  DateTime      @default(now())
  categories    Category[]
  transactions  Transaction[]

  @@map("users")
}

model Category {
  id           Int           @id @default(autoincrement())
  nome         String
  tipo         String
  data_criacao DateTime      @default(now())
  user         User?         @relation(fields: [user_id], references: [id])
  user_id      Int?
  transactions Transaction[]

  @@map("categories")
}

model Transaction {
  id           Int       @id @default(autoincrement())
  descricao    String
  valor        Decimal   @db.Decimal(14,2)
  tipo         String
  categoria    Category? @relation(fields: [categoria_id], references: [id])
  categoria_id Int?
  user         User?     @relation(fields: [user_id], references: [id])
  user_id      Int?
  data_criacao DateTime  @default(now())

  @@map("transactions")
}
